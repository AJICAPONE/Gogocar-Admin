.section-file-info-add
  display flex
  align-items center
  justify-content space-between
  background-color #424B5B
  border-radius 21px
  height 42px
  width max-content
  padding 15px
  cursor pointer
  span
    font-family 'Montserrat 500',sans-serif
    font-size 12px
    color #fff
  .icon
    size(20px)
    margin-right 25px
.section-file-info-add__input
  opacity 0
  line-height 0
  position absolute
  right 0
  left 0
  bottom 0
  top 0
  cursor pointer
  width 100%
.section-tiny-wrap
  label
    font-family 'Oswald 500',sans-serif
    font-size 16px
    color #fff
.section-tiny-side

  .section-text-options
    background-color rgba(255, 255, 255, 0.1)
    padding 16px
    height 46px
    border-radius 5px 5px 0px 0px
    margin-bottom 0
  .textarea-text-option
    margin 0
    height 300px
    border-radius 0px 0px 5px 5px
  .textarea-text-option--wrap
    margin-bottom 20px
.textarea-text-option ol
  counter-reset: item;
  padding 0
.textarea-text-option ol > li
  list-style: none;
.textarea-text-option ol > li:before
  content: counter(item) ") ";
  counter-increment: item;
  color: #fdab3e
.border-none
  border none
.section-file-info-add2
  position relative
  background-color #505E77
  border-radius 5px
  height 42px
  padding 12px
  display flex
  align-items center
  width 185px
  cursor pointer

  span
    font-family 'Oswald 400',sans-serif
    font-size 13px
    color #fff

  .icon
    size(16px)
    margin-right 30px
.section-file-info-add__input2
  position absolute
  opacity 0
  line-height 0
  left 0
  right 0
  top 0
  bottom 0
  width 100%
  cursor pointer
.fias-icon
  .icon
    size(16px)
.popup-title
  span
    color #FF4B55
.popup-desc
  font-family 'Oswald 400',sans-serif
  font-size 18px
  color #FDAB3E
  text-align center
  margin-bottom 60px
  span
    color #fff
.section-file-scan
  display flex
  .section-user-files
    background-color rgba(255,255,255, 0.05)
.section-reports-date-list
  display flex
  align-items center
.section-reports-left
  display flex
  align-items center
  .section-block--title
    margin-right 30px
.section-reports-date-item
  color #AFB2B5
  font-family 'Open Sans 400',sans-serif
  font-size 12px
  margin-right 20px
  cursor pointer
.section-reports-date-item.active
  color #FDAB3E
.section-reports-right--calendar
  position relative
  display flex
  align-items center
  background-color #424B5B
  border-radius 5px
  height 36px
  padding 11px
.section-reports-right--calendar__icon
  display flex
  justify-content center
  align-items center
  .icon
    size(20px)
.section-reports-right--calendar__date
  display flex
  align-items center
  padding 0 20px
  font-family 'Open Sans 400',sans-serif
  font-size 13px
  color #AFB2B5
.m-15
  margin 0 15px
.section-thead-report-pp
  th:first-child
    padding-right 120px !important
  th:nth-child(2)
    padding-right 80px !important

.p-30
  padding 30px
.section-report-popup-td .section-tbody--modal--table
  left 5px

  &:after
    left 10px
.section-top-yandex
  padding: 12px 15px;
  display: flex;
  flex-direction column
.section-block--desc
  font-family 'Open Sans 400',sans-serif
  font-size 14px
  color #fff
  margin-bottom 15px
.section-block--time
  font-family 'Oswald 500',sans-serif
  font-size 24px
  color #fff
.section-yandex-item
  margin-bottom 30px
  &:last-child
    margin-bottom 0
.w-191
  width 191px
.section-reports-right--calendar__popup
  display none
  position absolute
  bottom 0

