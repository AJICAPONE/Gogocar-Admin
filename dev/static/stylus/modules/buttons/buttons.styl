.gogocar-arrow-button
  display flex
  justify-content center
  align-items center
  background-color rgba(255, 255, 255, 0.05)
  border-radius 5px
  size(40px)
  cursor pointer

  .icon
    size(17px)

.hover-text-color
  transition all linear .2s

  &:hover
    color #FDAB3E

.gogocar-arrow-button-pagination
  display flex
  justify-content center
  align-items center
  background-color rgba(255, 255, 255, 0.05)
  border-radius 5px
  size(35px)
  cursor pointer

  .icon
    size(14px)

.section-users--tabs
  display flex
  align-items center

.section-users--tabs::-webkit-scrollbar
  height 0

.section-users--tab,.section-car-tabs--item,.section-car-tabs--item2,.section-car-tabs-added,.section-car-tabs-added2
  display flex
  justify-content center
  align-items center
  background-color #424B5B
  border-radius: 5px;
  padding 9px 25px
  height 36px
  width max-content
  margin 7.5px 15px 7.5px 0
  font-family 'Oswald 500',sans-serif
  font-size 12px
  color #fff
  cursor pointer
  transition all linear .1s
  &:hover
    background-color #3c4452

.section-users--tab.active,.section-car-tabs--item.active,.section-car-tabs--item2.active
  background: #FDAB3E;
  box-shadow: 0px 0px 20px rgba(253, 191, 90, 0.2);
.section-car-tab--list,.section-car-tab--list2
  display none
.section-car-tab--list.active,.section-car-tab--list2.active
  display flex
.section-car-tabs--list,.section-car-tabs--list2
  margin 0
  margin-bottom 10px
.section-buttons--wrap
  display flex
  align-items center
.section-button--yellow,.section-button--gray
  display flex
  justify-content center
  align-items center
  border none
  border-radius 30px
  height 40px
  padding 15px
  width 100%
  font-family 'Montserrat 500',sans-serif
  font-size 12px
  color #fff
  cursor pointer
  outline none !important
  transition all linear .2s

.w-100px
  width 100px

.section-button--yellow
  background-color #FDAB3E
  box-shadow: 0px 0px 20px rgba(253, 191, 90, 0.2);

  &:hover
    box-shadow: 0px 0px 0px rgba(0, 0, 0, 0.2);

.section-button--gray
  background-color #424B5B

  &:hover
    background-color #3c4452


