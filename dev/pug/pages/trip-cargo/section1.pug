                            input.input-main(type="text" placeholder="12:40:00")
                        .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                            label Дата прибытия:
                            .section-balance-filter-date__wrap
                                input.input-main.calendar-filter-today.calendar-zone-height.text-left(type="text")
                                .section-balance-date--icon
                                    +icon('calendar')
                        .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                            label Время прибытия:
                            input.input-main(type="text" placeholder="21:00:00")
                        .col-xl-12.col-lg-12.col-md-12.col-sm-6.section-input-wrap
                            label Груз:
                            .section-select--input2.section-select--input__show.section-driver-rules--category.justify-content-start
                                .section-yellow-bg--wrap
                                    .section-yellow-bg--content
                                        span Помидоры
                                        .section-yellow-bg--content__icon
                                            +icon('close')
                                    .section-yellow-bg--content
                                        span Огурцы
                                        .section-yellow-bg--content__icon
                                            +icon('close')
                                ul.section-select--popup__list
                                    li.section-select--popup__item.hover-text-color Помидоры2
                                    li.section-select--popup__item.hover-text-color Огурцы2

