                            label Создатель поездки:

                            .section-select--input2.section-select--input__show.section-driver-rules--category
                                .section-yellow-bg--wrap
                                    .section-yellow-bg--content
                                        span Матвей Федотов
                                        .section-yellow-bg--content__icon
                                            +icon('close')
                                .section-driver-trip-added
                                    +icon('plus')
                                ul.section-select--popup__list
                                    li.section-select--popup__item.hover-text-color Матвей Федотов2
                                    li.section-select--popup__item.hover-text-color Матвей Федотов3
                        .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
