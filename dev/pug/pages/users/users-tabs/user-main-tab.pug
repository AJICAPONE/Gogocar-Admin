form#users-main-param.section-user--dropdown__wrap.users-main-param.active
    .section-bottom-side
        .section-users-tab--content
            .section-user--dropdown__img
                label Фото пользователя:
                .section-user--dropdown-and-more
                    .section-user--dropdown__img--wrap
                        .section-user--dropdown__img--zone
                        input#user-photo.dropdown-img(type="file")
                        .section-user--dropdown__img--info (Drag&Drop) #[span Перетащите файл]
                    .section-user--more.gogocar-arrow-button
                        +icon('dots')
                        .section-user--more--popup
                            label.section-user--more--popup__item(for="user-photo")
                                +icon('download')
                                span Загрузить
                            .section-user--more--popup__item.section-delete__img
                                +icon('delete-red')
                                span Удалить
                    .section-users-dropdown--mobile-buttons
                        label.section-users-dropdown--mobile__load(for="user-photo")
                            +icon('download')
                            span Загрузить
                        .section-users-dropdown--mobile__delete.section-delete__img
                            +icon('delete-red')
                            span Удалить
            .section-inputs--wrapper.row
                .col-xl-4.col-lg-4.col-md-6.col-sm-6.section-input-wrap
                    label Имя:
                    input.input-main(type="text" placeholder="Введите имя")
                .col-xl-4.col-lg-4.col-md-6.col-sm-6.section-input-wrap
                    label Фамилия:
                    input.input-main(type="text" placeholder="Введите фамилию")
                .col-xl-4.col-lg-4.col-md-6.col-sm-6.section-input-wrap
                    label Отчество:
                    input.input-main(type="text" placeholder="Введите отчество")
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                    label Email:
                    input.input-main(type="email" placeholder="Введите Email")
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                    label Login:
                    input.input-main(type="text" placeholder="Логин")
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                    label Номер телефона для регистрации:
                    input.input-main.phone-mask(type="text" placeholder="8 (999) ___-__-__")
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                    label Язык для уведомлений:
                    .section-select--input2.section-select--input__show
                        span Не установлен
                        .section-select--popup__icon
                            +icon('arrow-down-white')
                        ul.section-select--popup__list.section-select--popup__list__show
                            li.section-select--popup__item2.hover-text-color Русский
                            li.section-select--popup__item2.hover-text-color Узбекский
                            li.section-select--popup__item2.hover-text-color Английский
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                    label Новый пароль:
                    input.input-main(type="text" placeholder="Введите Пароль")
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                    label Подтверждение нового пароля:
                    input.input-main(type="text" placeholder="Повторите пароль")
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                    .checkbox-input--tab__item
                        .checkbox-input
                        input#checkbox-tab.checkbox-input--tab(type="checkbox")
                        span Активен
    .section-footer-side
        .section-buttons--wrap
            button.section-button--yellow.w-100px.mr-3(type="submit") Сохранить
            .section-button--gray.w-100px Отменить
