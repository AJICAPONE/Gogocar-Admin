section.section-1
    .section-content--main__wrap.box-bg2.pb-0
        .section-content--main
            .section-top-side
                .section-top-block--back
                    .section-top-block--back__item
                        +icon('arrow-left')
                    .section-block--title Добавить
            .section-bottom-side.row.pr-0.pl-0.m-0
                .col-xl-10.col-lg-10.col-md-10.col-sm-6.section-input-wrap
                    label Название:
                    input.input-main(type="text" placeholder="Введите название...")

                .col-xl-2.col-lg-2.col-md-2.col-sm-6.section-input-wrap.justify-content-center.mb-0
                    .checkbox-input--tab__item
                        .checkbox-input
                        input.checkbox-input--tab(type="checkbox")
                        span Индексация
            .section-bottom-side.row.pr-0.pl-0.m-0.border-none
                .col-xl-4.col-lg-4.col-md-4.col-sm-6.section-input-wrap
                    label Введите область:
                    .section-select--input2.section-select--input__show
                        span Введите область...
                        .section-select--popup__icon
                            +icon('arrow-down-white')
                        ul.section-select--popup__list.section-select--popup__list__show
                            li.section-select--popup__item2.hover-text-color 1
                            li.section-select--popup__item2.hover-text-color 2
                            li.section-select--popup__item2.hover-text-color 3
                .col-xl-4.col-lg-4.col-md-4.col-sm-6.section-input-wrap
                    label Введите район:
                    .section-select--input2.section-select--input__show
                        span Введите район...
                        .section-select--popup__icon
                            +icon('arrow-down-white')
                        ul.section-select--popup__list.section-select--popup__list__show
                            li.section-select--popup__item2.hover-text-color 1
                            li.section-select--popup__item2.hover-text-color 2
                            li.section-select--popup__item2.hover-text-color 3
                .col-xl-4.col-lg-4.col-md-4.col-sm-6.section-input-wrap
                    label Введите код ФИАС:
                    input.input-main(type="text" placeholder="Введите код ФИАС...")
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                    label Название населенного пункта:
                    input.input-main(type="text" placeholder="Введите название населенного пункта...")
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                    label Title страницы:
                    input.input-main(type="text" placeholder="Title страницы...")
                .col-xl-12.col-lg-12.col-md-12.col-sm-6.section-input-wrap
                    label Discription:
                    textarea.textarea-input(cols="5" rows="4" placeholder="К сотрудничесвту")
                .col-xl-12.col-lg-12.col-md-12.col-sm-6.section-input-wrap
                    label Заголовок H1:
                    input.input-main(type="text" placeholder="Title...")
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                    label Url страницы:
                    input.input-main(type="text" placeholder="Url страницы...")
                .col-xl-6.col-lg-6.col-md-6.col-sm-6.section-input-wrap
                    label Key-words:
                    input.input-main(type="text" placeholder="Key-words...")
                .col-xl-12.col-lg-12.col-md-12.col-sm-6.section-tiny-wrap
                    label SEO текст
                    .section-tiny-side
                        .section-text-options
                            .section-text-option__item(data-edit-type="bold")
                                +icon('bold-text')
                            .section-text-option__item(data-edit-type="italic")
                                +icon('cursive')
                            .section-text-option__item(data-edit-type="underline")
                                +icon('underline-text')
                            .section-text-option__item(data-edit-type="formatblock" data-edit-value="blockquote")
                                +icon('quote')
                            .section-text-option__item(data-edit-type="insertunorderedlist")
                                +icon('list')
                            .section-text-option__item(data-edit-type="insertorderedlist")
                                +icon('numbers')
                            .section-text-option__item(data-edit-type="fontsize-smaller")
                                +icon('font')
                            .section-text-option__item(data-edit-type="fontsize-bigger")
                                +icon('line')
                        .textarea-text-option--wrap
                            .textarea-text-option(contenteditable="true") Ответ...


            .section-footer-side
                .section-buttons--wrap
                    button.section-button--yellow.w-100px.mr-3(type="submit") Сохранить
                    .section-button--gray.w-100px Отменить
